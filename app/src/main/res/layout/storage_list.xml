<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="horizontal">
    <TextView
            android:text="@string/s_quantity"
            android:layout_width="70dp"
            android:layout_height="70dp" android:id="@+id/s_quantity"
            android:background="@drawable/circle_textview" android:gravity="center"
            android:textColor="#FFFFFF" android:fontFamily="@font/viga" android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
    <TextView
            android:text="@string/s_product_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/s_name_product" android:gravity="center"
            android:fontFamily="@font/viga" android:paddingLeft="4dp" android:paddingRight="4dp"/>
</LinearLayout>