<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="@string/s_quantity"
                android:layout_width="0dp"
                android:layout_height="55dp" android:id="@+id/sale_product_quantity"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/viga" android:paddingLeft="4dp"
                android:paddingRight="4dp" android:layout_weight=".15"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/sale_product_name" android:layout_weight=".45"
                android:text="@string/s_product_name" android:fontFamily="@font/viga" android:gravity="center"/>
        <TextView
                android:text="@string/s_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/sale_product_cost" android:layout_weight=".2"
                android:fontFamily="@font/viga" android:gravity="center"/>
        <TextView
                android:text="@string/s_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:id="@+id/sale_product_total_cost"
                android:layout_weight=".2"
                android:fontFamily="@font/viga" android:gravity="center"/>
    </TableRow>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp" android:background="#A6D5D5D5"/>
</TableLayout>
