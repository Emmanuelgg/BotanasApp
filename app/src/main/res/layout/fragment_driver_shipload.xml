<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".DriverShiploadFragment"
                                                   android:id="@+id/frameLayout2">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/ic_group_expand_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/showStoreColorList" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.050000012"
            app:layout_constraintHorizontal_bias="0.95" android:layout_marginTop="24dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@drawable/ic_arrow_point_to_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/btnReviewShipload" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/tableLayout3"
            app:layout_constraintVertical_bias="0.95" app:layout_constraintHorizontal_bias="0.95"
            android:layout_marginBottom="24dp" android:layout_marginEnd="8dp"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="300dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tableLayout2">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/sf_product_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" android:id="@+id/textView36" android:layout_weight="1"
                    android:paddingLeft="4dp" android:paddingTop="8dp"
                    android:paddingRight="4dp" android:paddingBottom="8dp" android:gravity="center"
                    android:background="@color/colorTableHeader" android:textColor="@color/colorWhite"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="0">
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:id="@+id/onlyProductListRecycler"/>
        </TableRow>
    </TableLayout>
    <TableLayout
            android:layout_width="0dp"
            android:layout_height="420dp" app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tableLayout3" android:background="@color/colorBackgroundLightBlue">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="@string/sf_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView38" android:paddingLeft="4dp"
                    android:paddingTop="8dp" android:paddingRight="4dp" android:paddingBottom="8dp"
                    android:background="@color/colorTableHeader" android:textColor="@color/colorWhite"
                    android:layout_weight=".2" android:gravity="center"/>
            <TextView
                    android:text="@string/sf_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView39" android:paddingLeft="4dp"
                    android:paddingTop="8dp" android:paddingRight="4dp" android:paddingBottom="8dp"
                    android:background="@color/colorTableHeader" android:textColor="@color/colorWhite"
                    android:layout_weight=".8" android:gravity="center"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="0dp"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:id="@+id/driverShiploadRecycler"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>