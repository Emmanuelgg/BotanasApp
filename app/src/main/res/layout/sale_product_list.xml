<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" android:paddingLeft="2dp" android:paddingRight="2dp"
          android:paddingTop="2dp" android:paddingBottom="2dp">

    <EditText
            android:layout_width="0dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/sale_product_quantity" android:hint="@string/sf_quantity"
            android:importantForAutofill="no" tools:targetApi="o" android:gravity="center"
            android:fontFamily="@font/viga"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp" android:background="@drawable/circle_edittext"
            android:textColor="@color/colorWhite" android:textColorHint="@color/colorGray"
            android:textCursorDrawable="@drawable/custom_text_cursor" android:layout_weight=".2"
            android:layout_height="70dp" android:paddingLeft="4dp" android:paddingRight="4dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent" android:id="@+id/sale_product_name" android:layout_weight=".80"
            android:text="@string/s_product_name" android:fontFamily="@font/viga" android:gravity="center"/>
</TableRow>
