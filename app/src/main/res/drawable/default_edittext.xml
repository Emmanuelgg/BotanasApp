<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlueAlpha"
            />
            <corners android:radius="5dp"></corners>
            <padding android:bottom="7dp"
                     android:top="10dp"
                     android:left="8dp"
                     android:right="8dp"
            ></padding>
        </shape>
    </item>
    <item android:drawable="@color/colorPrimaryDarkAlpha"
          android:gravity="bottom"
          android:height="1dp"
          android:bottom="1dp"
          android:right="2dp"
          android:left="2dp"
    >
    </item>
</layer-list>